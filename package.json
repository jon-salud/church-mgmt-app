{
  "name": "church-mgmt",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "echo \"Run packages individually: pnpm -C api dev | pnpm -C web dev\"",
    "dev:api:mock": "DATA_MODE=mock pnpm -C api dev --watch",
    "dev:api:prisma": "DATA_MODE=prisma pnpm -C api dev",
    "test": "pnpm -r test",
    "test:e2e": "bash scripts/run-e2e.sh",
    "test:e2e:mock": "DATA_MODE=mock bash scripts/run-e2e.sh",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  }
}
