{
  "name": "church-mgmt",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "echo \"Run packages individually: pnpm -C api dev | pnpm -C web dev\"",
    "dev:api:mock": "DATA_MODE=mock pnpm -C api dev --watch",
    "dev:api:prisma": "DATA_MODE=prisma pnpm -C api dev",
    "test": "pnpm -r test",
    "test:e2e": "bash scripts/run-e2e.sh",
    "test:e2e:mock": "DATA_MODE=mock bash scripts/run-e2e.sh",
    "lint": "echo 'Starting ESLint...' && eslint 'api/src/**/*.{ts,tsx,js,jsx}' 'web/**/*.{ts,tsx,js,jsx}' --debug",
    "lint:fix": "echo 'Starting ESLint fix...' && eslint 'api/src/**/*.{ts,tsx,js,jsx}' 'web/**/*.{ts,tsx,js,jsx}' --fix --debug",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5"
  }
}
