# API Environment
PORT=3001
DATA_MODE=mock

# JWT configuration
JWT_SECRET="dev-insecure-secret"
JWT_EXPIRES_IN="1h"
OAUTH_STATE_SECRET="dev-insecure-state"

# Frontend origin (used for OAuth callback redirects)
WEB_APP_URL="http://localhost:3000"
API_BASE_URL="http://localhost:3001/api/v1"

# Google OAuth (create a project at console.cloud.google.com)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/v1/auth/google/callback"

# Facebook OAuth (create an app at developers.facebook.com)
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"
FACEBOOK_CALLBACK_URL="http://localhost:3001/api/v1/auth/facebook/callback"

# Allow mock/demo token logins alongside OAuth
ALLOW_DEMO_LOGIN=true
