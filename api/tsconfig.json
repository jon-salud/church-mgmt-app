{
  "compilerOptions": {
    "module": "node16",
    "target": "es2019",
    "moduleResolution": "node16",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}
